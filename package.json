{
  "name": "simple-blog",
  "version": "1.0.0",
  "description": "A simple blog with code quality automation",
  "main": "src/js/main.js",
  "scripts": {
    "lint": "eslint src/js/**/*.js",
    "test": "jest",
    "build": "mkdir -p dist && cp -r src/* dist/",
    "start": "node src/js/main.js"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "error",
      "no-console": "warn",
      "semi": ["error", "always"]
    }
  }
}
